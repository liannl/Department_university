@model Department.Models.Group
@using Department.Models

@{
    ViewBag.Title = "Добавить группу";
}


<i><font size="3" color="#a30000">@ViewBag.Message</font></i>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Добавить группу</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
            <div class="editor-label"><b> Название</b></div>
            <div class="">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        

        <div class="editor-label"><b>Студенты</b></div>
        @foreach (Student c in ViewBag.Students)
        {
            <input type="checkbox" name="selectedStudents" value="@c.Id" />@c.Name <br />
        }



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Group")
</div>
