@model Department.Models.Subject
@using Department.Models

@{
    ViewBag.Title = "Добавить предмет";
}

<i><font size="3" color="#a30000">@ViewBag.Message</font></i>
@using (Html.BeginForm())
{
<fieldset>
    <legend>Добавить предмет</legend>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="editor-label"><b>Название</b></div>
    
    <div class="">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>



    <div class="editor-label"><b>Преподаватель</b></div>
    @foreach (Teacher c in ViewBag.Teachers)
    {
        <input type="checkbox" name="selectedTeachers" value="@c.Id" />@c.Name <br />
    }

    <p>
        <input type="submit" value="Добавить" />
    </p>
</fieldset>
}

<div>
    @Html.ActionLink("Назад", "Subject")
</div>
