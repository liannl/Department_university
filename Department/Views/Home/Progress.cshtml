@model Department.Models.ProgressListViewModel
@using Department.Models;

@{ ViewBag.Title = "Успеваемость"; }

<h2>Успеваемость</h2>
<i><font size="3" color="#a30000">@ViewBag.Message</font></i>
<p>
    @Html.ActionLink("Добавить оценку", "CreateProgress")
</p>

    <form method="get">
        <div class="form-inline">
            <label class="control-label">Группа: </label>
            @Html.DropDownList("group", Model.Groups as SelectList,
                        htmlAttributes: new { @class = "form-control" })

            <label class="control-label">Предмет: </label>
            @Html.DropDownList("subject", Model.Subjects as SelectList,
                    htmlAttributes: new { @class = "form-control" })

            <label class="control-label">Курс: </label>
            @Html.DropDownList("year", Model.Years as SelectList,
                    htmlAttributes: new { @class = "form-control" })

            <input type="submit" value="Фильтр" class="btn btn-default" />
        </div>
    </form>

    <table class="table">
        <tr>
            <th>ФИО струдента</th>
            <th>Предмет</th>
            <th>Группа</th>
            <th>Курс</th>
            <th>Оценка</th>
            <th></th>
        </tr>

        @foreach (var item in Model.Progresses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Student.Group.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Year.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mark)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "EditProgress", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "DeleteProgress", new { id = item.Id })
                </td>
            </tr>
        }

</table>


