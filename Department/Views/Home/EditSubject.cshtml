@model Department.Models.Subject
@using Department.Models

@{
    ViewBag.Title = "Редактирование предмета";
}

<i><font size="3" color="#a30000">@ViewBag.Message</font></i>
@using (Html.BeginForm())
{
<fieldset>
    <legend>Редактирование предмета</legend>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="editor-label"><b>Название</b></div>
    <div class="">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
  


    <div class="editor-label"><b>Преподаватели</b></div>
    @foreach (Teacher c in ViewBag.Teachers)
    {
        <input type="checkbox" name="selectedTeachers" value="@c.Id"
               @(Model.Teachers.Contains(c) ? "checked=\"checked\"" : "") />@c.Name <br />
        }

    <p>
        <input type="submit" value="Сохранить" />
    </p>
</fieldset>
}

<div>
    @Html.ActionLink("Назад", "Subject")
</div>