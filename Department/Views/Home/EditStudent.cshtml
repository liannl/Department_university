@model Department.Models.Student
@using Department.Models

@{
    ViewBag.Title = "Редактирование студента";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Редактирование студента</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="editor-label"><b>ФИО</b></div>
    <div class="">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="editor-label"><b>Номер студенческого</b></div>
    <div class="">
        @Html.EditorFor(model => model.StudentCard, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StudentCard, "", new { @class = "text-danger" })
    </div>
</div>

        <div class="editor-label"><b>Группа</b></div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.GroupId, ViewBag.Groups as SelectList, string.Empty)

        </div>

        <div class="editor-label"><b>Курс</b></div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.YearId, ViewBag.Years as SelectList, string.Empty)

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    
}

<div>
    @Html.ActionLink("Назад", "Student")
</div>
